  - options = options || {};
  picture
    source(
      type="image/webp" srcset=`${options.path}${options.name}.webp`
    )
    if(options.lazy)
      img(src=`${options.path}${options.name}.${options.type}` alt=(options.alt || '') loading="lazy" decoding="async" width=`${options.width}` height=`${options.height}`)
    else
      img(src=`${options.path}${options.name}.${options.type}` alt=(options.alt || '') width=`${options.width}` height=`${options.height}`)

